@model Discussions.Models.Signup
@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_Loginlayout.cshtml";
}

<style>
    .login-logo {
        color: #902b2b;
    }
</style>
<div class="register-box">
    <div class="login-logo">
        <b>Structured Discussions</b>
    </div>

    <div class="register-box-body">
        <p class="login-box-msg">Register as new user</p>

        @using (Html.BeginForm("signup", "Account"))
        {
        <div class="form-group has-feedback">
            @Html.TextBoxFor(x => x.Firstname, new { @class = "form-control", placeholder = "First Name"})
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            @Html.TextBoxFor(x => x.Lastname, new { @class = "form-control", placeholder = "Last Name"})
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            @Html.TextBoxFor(x => x.email, new { @type = "email" ,@class="form-control" ,@placeholder="Email"})
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            @Html.PasswordFor(x => x.password, new { @type = "password" ,@class="form-control" ,@placeholder="Password"})
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            @Html.PasswordFor(x => x.password, new { @class="form-control" ,@placeholder="Retype password"})
            <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
        </div>
        <div class="row">
            <div class="col-xs-8">
                <div class="checkbox icheck">
                    <label>
                        <input type="checkbox" id ="agreecheckbox" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins> I agree to the <a href="#">terms</a>
                    </label>
                </div>
            </div>
            <!-- /.col -->
            <div class="col-xs-4">
                <button type="submit" id ="registerbutton"class="btn btn-primary btn-block btn-flat">Register</button>
            </div>
            <!-- /.col -->
        </div>

        }

        <div class="social-auth-links text-center">
            <p>- OR -</p>
            <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                <i class="fa fa-facebook"></i> Sign up using
                Facebook
            </a>
            <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                <i class="fa fa-google-plus"></i> Sign up using
                Google+
            </a>
        </div>

        <a href="../Account/login" class="text-center">I already have a membership</a>
    </div>
    <!-- /.form-box -->
</div>
<script type="text/javascript">
    

